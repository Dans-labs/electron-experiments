{
  "compilerOptions": {
    "outDir": "./target/dev-build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "types": [
      "webpack-env",
      "node"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "include": [
    "./src/main/typescript/**/*",
    "./src/main/css/*",
    "./src/main/img/*"
  ]
}
